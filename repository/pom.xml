<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.orderofthebee.addons</groupId>
        <artifactId>ootbee-support-tools-parent</artifactId>
        <version>0.0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>ootbee-support-tools-repo</artifactId>

    <name>Order of the Bee - Community Support Tools - Repository Module</name>
    <packaging>amp</packaging>

    <properties>
        <alfresco.client.war>alfresco</alfresco.client.war>
        <basePackage>org.orderofthebee.addons.support.tools.repo</basePackage>
    </properties>

    <dependencies>

        <dependency>
            <groupId>${alfresco.groupId}</groupId>
            <artifactId>alfresco-data-model</artifactId>
            <exclusions>
                <!-- No need for any CMIS -->
                <exclusion>
                    <groupId>org.apache.chemistry.opencmis</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <!-- Trim down unrequired, transitive dependencies -->
                <exclusion>
                    <groupId>org.apache.tika</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.jibx</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.antlr</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.springframework</groupId>
                    <artifactId>spring-orm</artifactId>
                </exclusion>

                <!-- who'd still want log4j? -->
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>

                <!-- There is so much more that we could exclude (especially most of the Commons stuff) -->
                <!-- the exclusions above are convenient enough to handle -->
            </exclusions>
        </dependency>

        <dependency>
            <groupId>${alfresco.groupId}</groupId>
            <artifactId>alfresco-repository</artifactId>
            <exclusions>
                <!-- Why the heck is a different JSR-223 API included? -->
                <exclusion>
                    <groupId>org.livetribe</groupId>
                    <artifactId>livetribe-jsr223</artifactId>
                </exclusion>

                <!-- Why the heck is MyFaces still a dependency? -->
                <exclusion>
                    <groupId>org.apache.myfaces.core</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <!-- Trim down unrequired, transitive dependencies -->
                <exclusion>
                    <groupId>org.alfresco</groupId>
                    <artifactId>alfresco-legacy-lucene</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.alfresco</groupId>
                    <artifactId>alfresco-jlan-embed</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.apache.solr</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.activiti</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.jbpm</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.springmodules</groupId>
                    <artifactId>spring-modules-jbpm31</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.apache.poi</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.springframework.social</groupId>
                    <artifactId>*</artifactId>
                </exclusion>

                <!-- No need for any CMIS -->
                <exclusion>
                    <groupId>org.apache.chemistry.opencmis</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.alfresco.cmis.client</groupId>
                    <artifactId>alfresco-opencmis-extension</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.springframework.extensions.surf</groupId>
                    <artifactId>spring-cmis-framework</artifactId>
                </exclusion>

                <!-- existence of ICU ticks me off -->
                <exclusion>
                    <groupId>com.ibm.icu</groupId>
                    <artifactId>icu4j</artifactId>
                </exclusion>

                <!-- who'd still want log4j? -->
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>

                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>

                <!-- There is so much more that we could exclude (especially most of the Commons stuff) -->
                <!-- the exclusions above are convenient enough to handle -->
            </exclusions>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <escapeString>\</escapeString>
                </configuration>
            </plugin>
        </plugins>

        <!-- TODO Handle "standard" JAR, sources + JavaDoc creation which SDK sucks at -->
    </build>

    <profiles>
        <profile>
            <id>LegacyJSHint</id>
            <activation>
                <property>
                    <name>!AcosixJSHint</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.cj.jshintmojo</groupId>
                        <artifactId>jshint-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <configuration>
                            <configFile>jshint.config.js</configFile>
                            <!-- just introduced - of course there'll be lint errors we have to clean up, but don't fail the entire build -->
                            <failOnError>false</failOnError>
                            <directories>
                                <directory>src/main/amp/config/alfresco/templates/webscripts</directory>
                                <directory>src/main/amp/web</directory>
                            </directories>
                            <excludes>
                                <!-- need to list full paths here - jshint-maven-plugin currently can't handle wildcards -->
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/active-sessions-update-users.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/active-sessions-update-users.post.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/active-sessions.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/applied-patches.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/hotthreads-getone.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/hotthreads.gett.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/log4j-settings.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/log4j-settings.post.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/performance.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/scheduled-jobs-execute.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/scheduled-jobs.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/test-transform-details.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/test-transform.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/threaddump-getone.get.js</exclude>
                                <exclude>src/main/amp/config/alfresco/templates/webscripts/org/orderofthebee/ootbee-support-tools/admin/support-tools/threaddump.get.js</exclude>
                            </excludes>
                            <reporter>jslint</reporter>
                            <reportFile>target/jshint.xml</reportFile>
                        </configuration>
                        <executions>
                            <execution>
                                <id>Legacy - JSHint the JS files</id>
                                <goals>
                                    <goal>lint</goal>
                                </goals>
                                <phase>process-resources</phase>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- The following is experimental - the plugin is currently not available via Maven Central or any other repository but can be built 
            from https://github.com/Acosix/jshint-maven-plugin -->
        <!-- Main benefits of this new plugin (the plugin used above has not seen an update in over a year) is use of newer JSHint version and 
            better configurability (support of .jshintrc and .jshintignore) -->
        <profile>
            <id>AcosixJSHint</id>
            <activation>
                <property>
                    <name>AcosixJSHint</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>de.acosix.maven</groupId>
                        <artifactId>jshint-maven-plugin</artifactId>
                        <version>0.0.1-SNAPSHOT</version>
                        <configuration>
                            <!-- just introduced - of course there'll be lint errors we have to clean up, but don't fail the entire build -->
                            <failOnError>false</failOnError>

                            <sourceDirectory>${project.basedir}/src/main</sourceDirectory>
                            <includes>
                                <include>amp/**/*.js</include>
                            </includes>
                            <excludes>
                                <exclude>amp/config/alfresco/templates/webscripts/**/*.get.js</exclude>
                                <exclude>amp/config/alfresco/templates/webscripts/**/*.post.js</exclude>
                            </excludes>
                            <checkstyleReportFile>js-checkstyle.xml</checkstyleReportFile>
                            <jshintVersion>2.9.3</jshintVersion>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>jshint</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>